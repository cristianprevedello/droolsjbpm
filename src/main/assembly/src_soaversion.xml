<?xml version="1.0" encoding="UTF-8"?>

<!-- NOTE: SOA-P version excludes drools-clips/**, drools-planner/**, drools-process/** and drools-server/**-->

<assembly>
  <id>src</id>
  <formats>
    <format>zip</format>
  </formats>

  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <directory>.</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>drools-ant/**</include>
        <include>drools-api/**</include>
        <include>drools-camel/**</include>
        <include>drools-compiler/**</include>
        <include>drools-container/**</include>
        <include>drools-core/**</include>
        <include>drools-decisiontables/**</include>
        <include>drools-doc/**</include>
        <include>drools-docs/**</include>
        <include>drools-eclipse/**</include>
        <include>drools-examples/**</include>
        <include>drools-factconstraint/**</include>
        <include>drools-grid/**</include>
        <include>drools-guvnor/**</include>
        <include>drools-ide-common/**</include>
        <include>drools-jsr94/**</include>
        <include>drools-persistence-jpa/**</include>
        <include>guvnor-repository/**</include>
        <include>drools-rhq-plugin/**</include>
        <include>drools-server/**</include>
        <include>drools-templates/**</include>
        <include>drools-verifier/**</include>
        <include>*.xml</include>
        <include>*.txt</include>
      </includes>
      <excludes>
        <exclude>drools-guvnor/repository/**</exclude>
        <exclude>guvnor-repository/repository/**</exclude>
        <exclude>drools-eclipse/org.drools.eclipse/lib/**</exclude>
        <exclude>drools-eclipse/org.drools.eclipse/help/**</exclude>
        <exclude>**/*.log/**</exclude>
        <exclude>**/target/**</exclude>
        <exclude>**/.svn/**</exclude>
        <exclude>**/.metadata/**</exclude>
      </excludes>
    </fileSet>
  </fileSets>
</assembly>
